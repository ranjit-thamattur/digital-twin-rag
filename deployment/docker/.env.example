# CloneMind AI - Environment Configuration Example

# Identity Layer (AWS Cognito)
COGNITO_USER_POOL_ID=us-east-1_XXXXX
COGNITO_CLIENT_ID=XXXXX
COGNITO_CLIENT_SECRET=XXXXX
COGNITO_OPENID_URL=https://cognito-idp.us-east-1.amazonaws.com/${COGNITO_USER_POOL_ID}/.well-known/openid-configuration

# Persistence Layer (AWS DynamoDB & S3)
TENANT_TABLE=TenantMetadata
S3_BUCKET=digital-twin-docs

# Infrastructure
QDRANT_HOST=localhost
QDRANT_PORT=6333
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
LOCALSTACK_HOST=localhost
LOCALSTACK_PORT=4566
AWS_DEFAULT_REGION=us-east-1

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Models
EMBEDDING_MODEL_ID=amazon.titan-embed-text-v1
FAST_MODEL=anthropic.claude-3-5-haiku-20241022-v1:0
SMART_MODEL=anthropic.claude-3-5-sonnet-20241022-v2:0

# WebUI
WEBUI_URL=http://localhost:3000
